@page
@model POC_Meetings.Pages.Meetings.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>Create Meeting</h3>
<hr />

<form method="post">

    <div class="row">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meeting.ContactName" class="control-label"></label>
                <input asp-for="Meeting.ContactName" class="form-control" />
                <span asp-validation-for="Meeting.ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.CompanyName" class="control-label"></label>
                <input asp-for="Meeting.CompanyName" class="form-control" />
                <span asp-validation-for="Meeting.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.Email" class="control-label"></label>
                <input asp-for="Meeting.Email" class="form-control" />
                <span asp-validation-for="Meeting.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.MobileNumber" class="control-label"></label>
                <input asp-for="Meeting.MobileNumber" class="form-control" />
                <span asp-validation-for="Meeting.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.MeetingDate" class="control-label"></label>
                <input asp-for="Meeting.MeetingDate" class="form-control" />
                <span asp-validation-for="Meeting.MeetingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.FollowUpDate" class="control-label"></label>
                <input asp-for="Meeting.FollowUpDate" class="form-control" />
                <span asp-validation-for="Meeting.FollowUpDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Meeting.FollowUpDone" /> @Html.DisplayNameFor(model => model.Meeting.FollowUpDone)
                </label>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Meeting.MeetingNotes" class="control-label"></label>
                <input asp-for="Meeting.MeetingNotes" class="form-control" />
                <span asp-validation-for="Meeting.MeetingNotes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
